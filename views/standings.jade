extends layout

block content
	div(class="container")
		div(class="row")
			- for (var i=0; i<standings.length; i++)
				div(class="col-sm-12 col-md-4 col-lg-3 text-center")
					div(class="thumbnail standings-gallery")
						img(src="images/" + standings[i].src)
						div(class="caption")
							if (standings[i].totalVotes == undefined || standings[i].totalVotes == null)
								p= "No votes"
							else
								p= "Rating: " + standings[i].totalVotes
