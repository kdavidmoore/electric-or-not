	nav(class="nav navbar-default")
		div(class="container-fluid")
			div(class="navbar-header")
				button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar-collapse-1", aria-expanded="false")
					span(class="sr-only") Toggle navigation
					span(class="icon-bar")
					span(class="icon-bar")
					span(class="icon-bar")
				a(class="navbar-brand", href="#") Electric or Not
			div(class="collapse navbar-collapse", id="navbar-collapse-1")
				ul(class="nav navbar-nav")
					li
						a(class="active", href="./")
							span(class="glyphicon glyphicon-print") Vote!
					li
						a(class="active", href="./standings")
							span(class="glyphicon glyphicon-sort-by-attributes-alt") Standings
					li
						a(class="active", href="./add")
							span(class="glyphicon glyphicon-plus") Add Pic
					li
						form(class="new-user", action="./reset", method="post")
							input(class="btn btn-default navbar-btn", type="submit", value="New User")
					li
						form(class="new-user", action="./reset", method="post")
